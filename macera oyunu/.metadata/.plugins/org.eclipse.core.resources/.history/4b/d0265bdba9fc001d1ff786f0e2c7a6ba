package location.BattleLoc;

import java.util.Scanner;

import monster.Monster;
import player.Player;

public class Forest extends BattleLoc{
	
	Monster vampire;
	
	
	public Forest() {}

	public Forest(Player player, Monster vampire) {
		super(player, vampire);
		this.vampire = vampire;
		vampire.setDamage(vampire.getDamage()-getPlayer().getDefence());
		if(vampire.getDamage()<0) {
			vampire.setDamage(0);
		}
	}

	Scanner scanner = new Scanner(System.in);
	
	@Override
	public void onLocation() throws Exception {
		int mN = vampire.monsterNumber();
		System.out.println();
		System.out.println("Dikkatli ol! Ormanda birden fazla vampir olabilir");
		System.out.println("Vampirlerin Ã¼stesinden gelebilirsen ormandan yakacak odun kazanarak Ã§Ä±kacaÄŸÄ±nÄ± unutma");
		System.out.println("Fakat vampirlerin Ã¼stesinden gelemezsen Ã¶lÃ¼rsÃ¼n ðŸ’€");
		scanner.nextLine();
		System.out.println("Vampirlerin saldÄ±rÄ± gÃ¼cÃ¼ --> " + vampire.getDamage());
