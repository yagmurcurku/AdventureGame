	}
	
	
	public void selectBattleLocation() throws Exception {
		System.out.println("MaÄŸarada savaÅŸmak istiyorsan 1'e bas");
		System.out.println("Ormanda savaÅŸmak istiyorsan 2'ye bas");
		System.out.println("Nehirde savaÅŸmak istiyorsan 3'e bas");
		int battleLocation = scanner.nextInt();
		
		
		switch (battleLocation) {
		case 1: {
			Monster zombie = new Zombie();
			Cave cave = new Cave(player, zombie);
			cave.onLocation();
			break;
		}
		case 2: {
			Monster vampire = new Vampire();
			Forest forest = new Forest(player, vampire);
			forest.onLocation();
			break;
		}
		case 3: {
			Monster bear = new Bear();
			River river = new River(player, bear);
			river.onLocation();
			break;
		}
		default:
			System.out.println("");
			System.out.println("YANLIÅ ALAN SEÃ‡Ä°MÄ° YAPTINIZ. LÃœTFEN TEKRAR DENEYÄ°N");
			selectBattleLocation();
			break;
		}
		
	}
	
	
	
	
	
}




