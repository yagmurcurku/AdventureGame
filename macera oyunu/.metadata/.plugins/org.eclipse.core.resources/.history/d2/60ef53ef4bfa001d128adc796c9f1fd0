package location.BattleLoc;

import java.util.Scanner;

import monster.Monster;
import player.Player;

public class River extends BattleLoc{
	
	Monster bear;
	

	public River(Player player, Monster bear) {
		super(player, bear);
		this.bear = bear;
		bear.setDamage(bear.getDamage()-getPlayer().getDefence());
		if(bear.getDamage()<0) {
			bear.setDamage(0);
		}
	}

	Scanner scanner = new Scanner(System.in);
	
	@Override
	public void onLocation() throws Exception {
		int mN = bear.monsterNumber();

		System.out.println();
		System.out.println("Dikkatli ol! Nehirde birden fazla ayÄ± olabilir");
		System.out.println("AyÄ±larÄ±n Ã¼stesinden gelebilirsen nehirden su kazanarak Ã§Ä±kacaÄŸÄ±nÄ± unutma");
		System.out.println("Fakat ayÄ±larÄ±n Ã¼stesinden gelemezsen Ã¶lÃ¼rsÃ¼n ðŸ’€");
		scanner.nextLine();
		battleLocation(bear, mN);
	}


}